<h1>All Categories</h1>
<div class="alert alert-info">
  <button type="button" class="close" data-dismiss="alert">Ã—</button>
  <strong>Note:</strong>
  To automatically create please send an email to: postmaster@app25135937.mailgun.org with subject: the Category name and paste the link inside the email Body.
</div>
<% @categories.each do |category| %>
 <div class="media">
    <div class="media-body">
      <h4 class="media-heading">
        <%= link_to category.name, category %>
      
      <% if policy(category).destroy? %>
         <%= link_to "delete", category, method: :delete, class: "btn btn-xs btn-danger", data: { :confirm => "Are you sure ?" } %>
      <% end %></h4>
    </div>
  </div>
<% end %>

<% if policy(Category.new).create? %>
  <%= link_to "Create a category", new_category_path, class: 'btn btn-success' %>
<% end %>
